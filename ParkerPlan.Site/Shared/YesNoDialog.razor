<MudDialog IsVisible="@Visible">
    <DialogContent>
        <MudText Typo="Typo.h4">@Text</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="() => { Visible = false; Ok.InvokeAsync(); }" Link="@OkLink">OK</MudButton>
        <MudButton OnClick="() => { Visible = false; }">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code 
{
    [Parameter]
    public bool Visible { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public EventCallback Ok { get; set; } = new EventCallback();
    [Parameter]
    public string OkLink { get; set; }
}
