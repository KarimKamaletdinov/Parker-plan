@using ParkerPlan.Abstractions.Queries
@using ParkerPlan.Abstractions.Dtos
@using ParkerPlan.Abstractions
@inject IJSRuntime Js
@inject IQueryHandler<GetWorkers, WorkerDto[]> GetWorkers


<MudDialog IsVisible="Visible">
    <DialogContent>
        <MudText Typo="Typo.h4">
            @_message
        </MudText>
        <MudTextField @bind-Value="@_wrtnLogin" HelperText="@("Введите логин")"/>
        <MudDivider />
        <MudTextField @bind-Value="@_wrtnPwd" HelperText="@("Введите пароль")"/>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="OkClicked">
            OK
        </MudButton>
        <MudButton OnClick="CloseMe">
            Cancel
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public EventCallback CloseMe { get; set; } = new();

    private string _message = "Введите логин и пароль";

    private string _wrtnLogin;

    private string _wrtnPwd;


    private void OkClicked()
    {
        var workers = GetWorkers.Execute(new GetWorkers());

        if (workers.Any(x => x.Login == _wrtnLogin))
        {
            if(_wrtnPwd == workers.First(x => x.Login == _wrtnLogin).Password)
            {
                WriteCookies();
                Visible = false;
                return;
            }
        }

        _message = "Неверный логин или пароль!";
    }

    protected override void OnInitialized()
    {
        ReadCookies();

        base.OnInitialized();
    }

    protected async Task ReadCookies()
    {
        _wrtnLogin = await Js.InvokeAsync<string>("ReadCookie.ReadCookie", "login");
        _wrtnPwd = await Js.InvokeAsync<string>("ReadCookie.ReadCookie", "password");
        StateHasChanged();
    }

    protected async Task WriteCookies()
    {
        await Js.InvokeAsync<object>("WriteCookie.WriteCookie", "login", _wrtnLogin,
            DateTime.Now.AddYears(10));
        await Js.InvokeAsync<object>("WriteCookie.WriteCookie", "password", _wrtnPwd,
            DateTime.Now.AddYears(10));
    }
}