<MudDialog IsVisible="@Visible">
    <DialogContent>
        <MudText Typo="Typo.h4">@Header</MudText>
        <MudTextField T="int" ValueChanged="Changed"/>
    </DialogContent>
    <DialogActions>
        @{
            var okIcon = Icons.Material.Rounded.Check;
            var cancelIcon = Icons.Material.Rounded.Cancel;
        }
        <MudButton StartIcon="@okIcon"
                   OnClick="() => { this.Visible = false;this.Ok.InvokeAsync(this._value); }">
            Ok
        </MudButton>
        <MudButton StartIcon="@cancelIcon" OnClick="() => { Visible = false; }">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code
{
    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public string Header { get; set; }

    private int _value;

    [Parameter]
    public EventCallback<int> Ok { get; set; }

    public void Changed(int value)
    {
        _value = value;
    }
}