@using Newtonsoft.Json
@using ParkerPlan.Site.Data
@using System.Threading
@inherits LayoutComponentBase
@inject IJSRuntime Js


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudAppBarSpacer />
        @{
            var icon = Icons.Material.Filled.House;
            var adminIcon = Icons.Material.Filled.Settings;
        }
        <CheckSity AutoInit="true" />
        <MudIconButton Icon="@icon" Color="Color.Inherit" Link="/" />
        <MudIconButton Icon="@adminIcon" Color="Color.Inherit"
                       OnClick="() => { _showDialog = true; }" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Parker</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<AdminDialog Visible="_showDialog"
             CloseMe="() => { _showDialog = false; }" />

@code {
    bool _drawerOpen = true;

    private bool _showDialog = false;

    private string _b;

    private string _s;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}