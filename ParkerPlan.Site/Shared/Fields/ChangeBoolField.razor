<div style="margin: 5px 0 0 0">
    <div style="width: 50%; display: inline-block">
        <MudText Align="Align.Left" Typo="Typo.h6">
            @FieldName
        </MudText>
    </div>
    <div style="width: 49%; display: inline-block">
        <MudSwitch Checked="@FieldValue" Color="Color.Primary" CheckedChanged="Changed" />
    </div>
</div>

@code {
    [Parameter]
    public string FieldName { get; set; }
    [Parameter]
    public bool FieldValue { get; set; }
    [Parameter]
    public EventCallback<bool> Changed { get; set; }
}